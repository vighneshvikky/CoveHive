<h2 class="text-2xl font-bold mb-4">Return Reason for Order <%= order._id %></h2>

<div class="bg-white p-6 rounded-lg shadow-md max-w-md w-full">
  <h3 class="text-xl font-semibold mb-2">Product: <%= item.productId.name %></h3>
  
  <!-- Display the return reason -->
  <p class="mb-4">Reason for Return: <%= reasonForReturn %></p>

  <!-- Form to approve or reject the return -->
  <form action="/admin/processReturn/<%= order._id %>/<%= item.productId._id %>" method="POST">
    <div class="flex justify-end gap-4">
      <button type="submit" name="action" value="approve" class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-500">
        Approve
      </button>
      <button type="submit" name="action" value="reject" class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-500">
        Reject
      </button>
    </div>
  </form>
</div>