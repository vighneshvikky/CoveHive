<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color:rgb(9, 11, 9);
        margin: 0;
        font-family: 'Arial', sans-serif;
        overflow: hidden;
    }

    .success-container {
        text-align: center;
        background-color:rgb(128, 175, 129);
        padding: 3em;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transform: scale(0);
        animation: scale-in 0.5s forwards ease-out;
    }

    @keyframes scale-in {
        to {
            transform: scale(1);
        }
    }

    .checkmark-container {
        display: flex;
        justify-content: center;
        margin-bottom: 1em;
    }

    .checkmark {
        width: 100px;
        height: 100px;
    }

    .checkmark__circle {
        stroke:rgb(26, 83, 25);
        stroke-width: 4;
        stroke-dasharray: 166;
        stroke-dashoffset: 166;
        stroke-linecap: round;
        animation: draw-circle 1s ease-out forwards;
    }

    .checkmark__check {
        stroke:rgb(26, 83, 25);
        stroke-width: 4;
        stroke-dasharray: 48;
        stroke-dashoffset: 48;
        stroke-linecap: round;
        animation: draw-check 1s 0.5s ease-out forwards;
    }

    @keyframes draw-circle {
        to {
            stroke-dashoffset: 0;
        }
    }

    @keyframes draw-check {
        to {
            stroke-dashoffset: 0;
        }
    }

    .success-message {
        color:rgb(128, 175, 129);
        margin-bottom: 0.5em;
        opacity: 0;
        animation: fade-in 1s 0.5s forwards;
    }

    .order-details {
        color: #fefeeb;
        margin-bottom: 1.5em;
        opacity: 0;
        animation: fade-in 1s 1s forwards;
    }

    @keyframes fade-in {
        to {
            opacity: 1;
        }
    }
</style>

<div class="success-container">
    <div class="checkmark-container">
        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
            <circle class="checkmark__circle" cx="26" cy="26" r="22" fill="none" />
            <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
        </svg>
    </div>
    <h1 style="color: #Fefeeb;">Thank you.</h1>
    <h1 class="success-message">Order Successfully Placed!</h1>
    <p class="order-details">Thank you for your purchase. Your order number is <%= orders._id %>.</p>
    <p style="color: #Fefeeb;">
        We will immediatelly process your and it will be delivered in 2 - 5 business days.
    </p>
    <div class="d-flex justify-content-center gap-5 mt-5">
        <a href="/orders" class="btn btn-danger d-flex">My Orders</a>
        <a href="/allProducts" class="btn btn-danger d-flex">Continue Shopping</a>
    </div>
</div>

