

    <% if(user.fullName !="undefined") { %>
        <%- include('../layouts/userHeader.ejs') %>
    <% } else { %>
        <%- include('../layouts/landingNav.ejs') %>
    <% } %>
    <!-- Navbar -->


    <!-- Main content with sidebar -->
    <div class="flex min-h-screen justify-center">
        <!-- Sidebar -->
        <aside class="w-48 bg-premium text-white">
            <div class="p-4">
                <h2 class="text-xl font-bold mb-4">Menu</h2>
                <nav>
                    <ul>
                        <li class="mb-2">
                            <a href="/profile" class="block p-2 hover:bg-gray-700 rounded">Profile</a>
                        </li>
                        <li class="mb-2">
                            <a href="/user-address" class="block p-2 hover:bg-gray-700 rounded">Addresses</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="block p-2 hover:bg-gray-700 rounded">Orders</a>
                        </li>
                        <li class="mb-2">
                            <a href="/forget-password" class="block p-2 hover:bg-gray-700 rounded">Forgot Password</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 flex justify-center items-center p-8">
            <div class="w-full max-w-lg">

                <h2 class="text-3xl font-bold mb-6 text-premium text-center">User Profile</h2>
                
                <form action="/edit-profile" method="POST" class="bg-white p-6 shadow-md rounded-lg">
                    <div class="mb-4">
                        <label for="fullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                        <input type="text" id="fullName" name="fullName" value="<%= user.fullName %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-premium" />
                    </div>
                    
                    <div class="mb-4">
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                        <input type="text" id="phone" name="phone" value="<%= user.phone %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-premium" />
                    </div>
                    
                    <button type="submit" class="bg-premium text-white px-4 py-2 rounded-md hover:bg-opacity-90 transition duration-300 w-full">Save</button>
                </form>
            </div>
        </main>
    </div>

 <%- include('../layouts/userFooter') %>