<%- include('../layouts/userHeader.ejs') %>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container mx-auto mt-8 px-4">
  <div class="flex justify-center">
      <div class="w-full max-w-4xl">
          <!-- Order Card -->
          <% orderDetails.forEach(order => { %>
              <div class="mb-6 overflow-hidden bg-white rounded-lg shadow-md border border-gray-100">
                  <% order.items.forEach(item => { %>
                      <div class="flex flex-col md:flex-row p-6 gap-6">
                          <img src="/uploads/<%= item.productImage %>" 
                               alt="<%= item.productId.name %>" 
                               class="w-full md:w-48 h-48 object-cover rounded-lg">
                          
                          <div class="flex-1 space-y-4">
                              <div class="flex justify-between items-start">
                                  <h5 class="text-xl font-semibold text-gray-900">
                                      <%= item.productId.name %>
                                  </h5>
                                  <p class="text-lg font-bold text-gray-900">
                                      $<%= (item.productPrice * item.productCount).toFixed(2) %>
                                  </p>
                              </div>

                              <!-- Delivery Status Section -->
                              <div id="delivery-status-<%= order._id %>" class="space-y-2">
                                  <% if (order.status === 'Cancelled') { %>
                                      <div class="flex items-center gap-2">
                                          <span class="w-2.5 h-2.5 rounded-full bg-red-500"></span>
                                          <strong class="font-medium text-red-600">Cancelled</strong>
                                      </div>
                                      <p class="text-gray-600 text-sm">Your order has been cancelled.</p>
                                  <% } else if (order.status === 'Delivered') { %>
                                      <div class="flex items-center gap-2">
                                          <span class="w-2.5 h-2.5 rounded-full bg-green-500"></span>
                                          <strong class="font-medium text-green-600">Delivered</strong>
                                          <span class="text-gray-600">on <%= order.deliveryDate %></span>
                                      </div>
                                      <p class="text-gray-600 text-sm">Your item has been delivered.</p>
                                  <% } else if (order.status === 'Pending') { %>
                                      <div class="flex items-center gap-2">
                                          <span class="w-2.5 h-2.5 rounded-full bg-yellow-500"></span>
                                          <strong class="font-medium text-yellow-600">Pending</strong>
                                      </div>
                                      <p class="text-gray-600 text-sm">Your order is currently being processed.</p>
                                  <% } else { %>
                                      <div class="flex items-center gap-2">
                                          <span class="w-2.5 h-2.5 rounded-full bg-blue-500"></span>
                                          <strong class="font-medium text-blue-600">Status: <%= order.status %></strong>
                                      </div>
                                      <p class="text-gray-600 text-sm">Your order status is <%= order.status %>.</p>
                                  <% } %>
                              </div>

                              <a href="#" class="inline-flex items-center text-green-600 hover:text-green-700 text-sm font-medium">
                                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                  </svg>
                                  Rate & Review Product
                              </a>

                              <!-- Action Buttons -->
                              <div class="flex flex-wrap gap-3 pt-4">
                                  <button class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors"
                                          data-toggle="modal" 
                                          data-target="#cancelModal" 
                                          data-order-id="<%= order._id %>">
                                      Cancel Order
                                  </button>
                                  <a href="/prepay/<%= order._id %>" 
                                     class="px-4 py-2 text-sm font-medium text-white bg-yellow-500 rounded-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 transition-colors">
                                      Prepay
                                  </a>
                              </div>
                          </div>
                      </div>
                  <% }) %>
              </div>
          <% }) %>

          <!-- No More Results Message -->
          <div class="text-center py-8 border-t border-gray-100">
              <p class="text-gray-500 font-medium">No More Results To Display</p>
          </div>
      </div>
  </div>
</div>

<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="cancelModalLabel" hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-lg shadow-lg">
      <div class="modal-header flex items-center justify-between border-b p-4">
        <h5 class="modal-title text-xl font-semibold text-gray-800" id="cancelModalLabel">Cancel Order</h5>
        <button type="button" class="close text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-6">
        <form id="cancelOrderForm">
          <div class="form-group mb-5">
            <label for="cancelReason" class="block text-sm font-medium text-gray-700">Reason for cancelling the order:</label>
            <textarea class="form-control mt-2 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition duration-150 ease-in-out" id="cancelReason" rows="3" required></textarea>
          </div>
          <input type="hidden" id="orderId">
          <button type="submit" class="btn w-full bg-red-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-150 ease-in-out">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- Include SweetAlert2 Script -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
// When the Cancel Order button is clicked, open the modal and set the order ID
$('#cancelModal').on('show.bs.modal', function (event) {
var button = $(event.relatedTarget); // Button that triggered the modal
var orderId = button.data('order-id'); // Extract order ID from data-* attribute
var modal = $(this);
modal.find('#orderId').val(orderId); // Set the hidden input value
});

// Submit cancel order form and show SweetAlert
$('#cancelOrderForm').on('submit', function (e) {
e.preventDefault();

var orderId = $('#orderId').val();
var cancelReason = $('#cancelReason').val();

if (cancelReason.trim() === "") {
  Swal.fire('Error', 'Please provide a reason for cancellation.', 'error');
  return;
}

// Send AJAX request to cancel the order
$.ajax({
  url: '/cancelOrder/' + orderId,
  method: 'GET', // Change to GET since your route is set to GET
  success: function(response) {
    // Update delivery status after successful cancellation
    $('#delivery-status-' + orderId).html(`
      <p><span>‚óè</span> Cancelled</p>
      <p>Your order has been cancelled</p>
    `);

    // Show SweetAlert after successful cancellation
    Swal.fire({
      icon: 'success',
      title: 'Order Cancelled',
      text: 'Your order has been successfully cancelled.',
      showConfirmButton: true,
    }).then(() => {
      // Close the modal after showing SweetAlert
      $('#cancelModal').modal('hide');
    });
  },
  error: function(xhr) {
    // Handle error case
    Swal.fire('Error', 'There was an issue cancelling your order. Please try again.', 'error');
  }
});
});
</script>

